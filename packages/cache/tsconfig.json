//WARNING: If you are manually specifying files to compile then the tsconfig.json is completely ignored, you must use command line flags
{
    "compilerOptions": {
        "noImplicitAny": false,
        "lib": [
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "allowJs": false,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
            "../../node_modules/@types"
        ],
        // temporary fix
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ]
}