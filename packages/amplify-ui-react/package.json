{
	"name": "@aws-amplify/ui-react",
	"sideEffects": false,
	"version": "0.2.1",
	"description": "React specific wrapper for @aws-amplify/ui-components",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/aws-amplify/amplify-js.git"
	},
	"scripts": {
		"build": "npm run clean && npm run compile",
		"build:watch": "tsc -w",
		"clean": "rm -rf dist",
		"compile": "npm run tsc",
		"tsc": "tsc -p ."
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/"
	],
	"devDependencies": {
		"@types/react": "^16.0.41",
		"@types/react-dom": "^16.0.11",
		"react": "^16.7.0",
		"react-dom": "^16.7.0",
		"typescript": "^3.3.4000"
	},
	"dependencies": {
		"@aws-amplify/ui-components": "^0.3.1"
	},
	"peerDependencies": {
		"react": "^16.7.0",
		"react-dom": "^16.7.0"
	},
	"jest": {
		"preset": "ts-jest",
		"setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
		"testPathIgnorePatterns": [
			"node_modules",
			"dist"
		]
	}
}
